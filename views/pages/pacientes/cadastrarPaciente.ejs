                    <a class="nav-link" href="/lista-paciente">Lista de Pacientes</a>
                  </li>
              </ul>
            </div>
          </nav>
    </header>
    <div class="titulo">
        <h3>Cadastro de Usuário/Paciente</h3>
    </div>
    <form action="/salvaPaciente" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" name="nome" id="nome" required>
          </div>
          <div class="form-group col-md-6">
            <label for="sobrenome">Sobrenome</label>
            <input type="text" class="form-control" name="sobrenome" id="sobrenome" required>
          </div>
        </div>
        <div class="form-group">
            <label for="cpf">CPF</label>
            <input type="text" class="form-control" name="cpf" id="cpf" placeholder="000.000.000-00" required>
        </div>
        <div class="form-group">
            <label for="telefone">Telefone de Contato</label>
            <input type="text" class="form-control" name="telefone" id="telefone" placeholder="(00)00000-0000" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" class="form-control" name="email" id="email" placeholder="email@email.com" required>
        </div>
        <div class="form-row">
          <div class="form-group col-md-8">
            <label for="endereco">Logradouro</label>
            <input type="text" class="form-control" name="logradouro" id="logradouro" placeholder="Avenida, Rua, Travessa, etc." required>
          </div>
          <div class="form-group col-md-2">
            <label for="numero">Número</label>
            <input type="text" class="form-control" name="numero" id="numero" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="cidade">Cidade</label>
            <input type="text" class="form-control" name="cidade" id="cidade" required>
          </div>
          <div class="form-group col-md-4">
            <label for="estado">Estado</label>
            <input type="text" class="form-control" name="estado" id="estado" required>
          </div>
        </div>
        <button type="submit" class="btn btn-primary" id="cadastro">Cadastrar</button>
      </form>
      <script src="js/script.js"></script>
      <%- include('./../../partials/footer.ejs') -%>