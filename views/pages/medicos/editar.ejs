<%- include('../../partials/head.ejs') -%>
<% data.forEach(function(details) { %>
<form class="container" action="/medicos-editar/<%= details._id %>" method="post">
	<div class="form-row">
	  <div class="form-group col-md-5">
		<label for="nome">Nome</label>
		<input
		  type="text"
		  class="form-control"
		  placeholder="Digite nome"
		  name="nome"
		  value="<%= details.nome %>"
		/>
	  </div>
	  <div class="form-group col-md-7">
		<label for="sobrenome">Sobrenome</label>
		<input
		  type="text"
		  class="form-control"
		  placeholder="Digite sobrenonome"
		  name="sobrenome"
		  value="<%= details.sobrenome %>"
		/>
	  </div>
	</div>
	<div class="form-row">    
	  <div class="form-group col-md-4">
		<label for="registro">registro</label>
		<input type="text" class="form-control" name="registro" id="registro" value="<%= details.registro %>" />
	  </div>
	  <div class="form-group col-md-8">
		<label for="especialidade">Especialidade</label>
		<input type="text" class="form-control" name="especialidade" id="especialidade" value="<%= details.especialidade %>"/>
	  </div>
	</div>
	<div class="form-row">
	  <div class="form-group col-md-4">
		<label for="email">E-mail</label>
		<input class="form-control" type="email" name="email" id="email" value="<%= details.email %>" />
	  </div>
	  <div class="form-group col-md-4">
		<label for="telefone">Telefone</label>
		<input type="text" class="form-control" name="telefone" id="telefone" value="<%= details.telefone %>" />
	  </div>
	</div>
	
	<button type="submit" class="btn btn-dark">Salvar Alteração</button>
	<a class="btn btn-dark" href="/medicos-listar" >voltar</a>
  </form>
  <% }) %>
<%- include('../../partials/footer.ejs') -%>