<%- include('../../partials/head.ejs') -%>

<form class="container" action="/medicos-cadastrar" method="post">
  <div class="form-row">
    <div class="form-group col-md-5">
      <label for="nome">Nome</label>
      <input
        type="text"
        class="form-control"
        placeholder="Digite nome"
        name="nome"
      />
    </div>
    <div class="form-group col-md-7">
      <label for="sobrenome">Sobrenome</label>
      <input
        type="text"
        class="form-control"
        placeholder="Digite sobrenonome"
        name="sobrenome"
      />
    </div>
  </div>
  <div class="form-row">    
    <div class="form-group col-md-4">
      <label for="registro">registro</label>
      <input type="text" class="form-control" name="registro" id="registro" />
    </div>
    <div class="form-group col-md-8">
      <label for="especialidade">Especialidade</label>
      <input type="text" class="form-control" name="especialidade" id="especialidade" />
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="email">E-mail</label>
      <input class="form-control" type="email" name="email" id="email" />
    </div>
    <div class="form-group col-md-4">
      <label for="telefone">Telefone</label>
      <input type="text" class="form-control" name="telefone" id="telefone" />
    </div>
  </div>
  
  <button type="submit" class="btn btn-dark">Enviar</button>
</form>

<%- include('../../partials/footer.ejs') -%>
